{
    "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "get-configuration output",
        "$id": "http://schema.nethserver.org/imapsync/list-task-output.json",
        "description": "Get tasks configuration",
        "examples": [
            {
            "enabled_mailboxes": [
                {
                    "name": "administrator",
                    "label": "administrator",
                    "value": "administrator"
                },
                {
                    "name": "foo",
                    "label": "foo",
                    "value": "foo"
                },
                {
                    "name": "john",
                    "label": "john",
                    "value": "john"
                }
            ],
            "user_properties": [
                {
                    "props": {
                        "localuser": "administrator",
                        "remoteusername": "username",
                        "remotehostname": "imap.foo.com",
                        "remoteport": "143",
                        "security": "tls",
                        "delete_local": true,
                        "delete_remote": false,
                        "exclude": "|folder1|folder2",
                        "remotepassword": "password",
                        "cron": "5m"
                    },
                    "mailbox": "administrator",
                    "service_running": false
                },
                {
                    "props": {
                        "localuser": "foo",
                        "remoteusername": "username",
                        "remotehostname": "imap.foo.com",
                        "remoteport": "143",
                        "security": "tls",
                        "delete_local": false,
                        "exclude": "",
                        "remotepassword": "password",
                        "cron": "1h"
                    },
                    "mailbox": "foo",
                    "service_running": false
                }
            ]
        }
    ],
    "type": "object",
    "properties": {
        "enabled_mailboxes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "label",
                    "value"
                ]
            }
        },
        "user_properties": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "task_id": {
                        "type": "string"
                    },
                    "localuser": {
                        "type": "string"
                    },
                    "remoteusername": {
                        "type": "string"
                    },
                    "remotehostname": {
                        "type": "string"
                    },
                    "remoteport": {
                        "type": "string"
                    },
                    "security": {
                        "type": "string",
                        "enum": [
                            "",
                            "tls",
                            "ssl"
                        ]
                    },
                    "delete_local": {
                        "type": "boolean"
                    },
                    "deletefolder": {
                        "type": "string"
                    },
                    "exclude": {
                        "type": "string"
                    },
                    "delete_remote": {
                        "type": "boolean"
                    },
                    "delete_remote_older": {
                        "type": "integer"
                    },
                    "expunge_remote": {
                        "type": "string"
                    },
                    "cron": {
                        "type": "string"
                    },
                    "folder_inbox": {
                        "type": "string"
                    },
                    "foldersynchronization": {
                        "type": "string",
                        "enum": [
                            "all",
                            "inbox",
                            "exclusion"
                        ]
                    },
                    "remotepassword": {
                        "type": "string"
                    },
                    "service_running": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "task_id",
                    "localuser",
                    "remoteusername",
                    "remotehostname",
                    "remoteport",
                    "security",
                    "delete_local",
                    "delete_remote",
                    "delete_remote_older",
                    "foldersynchronization",
                    "remotepassword",
                    "service_running"
                ]
            }
        }
    },
    "required": [
        "enabled_mailboxes",
        "user_properties"
    ]
}